{
  "name": "@0x-jerry/ninja-keys",
  "version": "1.2.2",
  "description": "Ninja Keys",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup ./src/index.ts --dts --clean --format esm",
    "dev": "run-p dev:*",
    "dev:build": "tsup ./src/index.ts --dts --clean --format esm --watch",
    "dev:serve": "wds --root-dir=. --node-resolve --watch",
    "release": "x-release"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "react",
    "vue",
    "javascript",
    "keyboard",
    "hotkeys",
    "shortcut",
    "keypress",
    "hotkey"
  ],
  "author": "Serhii Slieptsov <hey@sergei.ws>",
  "license": "MIT",
  "homepage": "https://github.com/ssleptsov/ninja-keys",
  "repository": {
    "type": "git",
    "url": "git@github.com:ssleptsov/ninja-keys.git"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "clean-publish": {
    "files": [
      "dev",
      "docs",
      "web-dev-server.config.mjs"
    ]
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^0.3.6",
    "@material/mwc-icon": "0.27.0",
    "@web/dev-server": "0.1.34",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "hotkeys-js": "3.10.0",
    "lit": "^2.4.0",
    "lit-html": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "tsup": "^6.2.3",
    "typescript": "^4.8.4"
  },
  "customElements": "custom-elements.json"
}